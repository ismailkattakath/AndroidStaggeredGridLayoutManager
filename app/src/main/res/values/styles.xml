<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="table_title_text" parent="AppTheme">
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:fontFamily">@string/roboto_condensed</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="table_text" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@string/roboto_condensed</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="light_text_shadow" parent="AppTheme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">#AA000000</item>
    </style>



    <style name="title_text" parent="AppTheme">
        <item name="android:textColor">@color/titleText</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dashboard_pin_editText" parent="AppTheme">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">4</item>
    </style>

    <style name="sub_title_text" parent="AppTheme">
        <item name="android:textColor">@color/subtitleText</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- By Izmu for V3 BEGIN -->
    <style name="default_toolbar_text">
        <item name="android:textSize">@dimen/default_toolbar_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="item_card_text" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">@dimen/default_text_padding</item>
        <item name="android:paddingRight">@dimen/default_text_padding</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="item_nutrition_text" parent="AppTheme">
        <item name="android:gravity">left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/default_item_nutrition_and_flag_rows</item>
        <item name="android:textSize">@dimen/default_item_nutrition_and_flag_text</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textColor">@color/text_invert</item>
        <item name="android:paddingLeft">@dimen/default_text_padding</item>
        <item name="android:paddingRight">@dimen/default_text_padding</item>
        <item name="android:paddingTop">@dimen/default_text_padding_special</item>
        <item name="android:paddingBottom">@dimen/default_text_padding_special</item>
    </style>

    <style name="item_flag_text" parent="AppTheme">
        <item name="android:gravity">left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/default_item_nutrition_and_flag_rows</item>
        <item name="android:textSize">@dimen/default_item_nutrition_and_flag_text</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textColor">@color/text_invert</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/default_text_padding_special</item>
        <item name="android:paddingBottom">@dimen/default_text_padding_special</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">#66000000</item>
    </style>

    <style name="button_plus_or_minus">
        <item name="android:layout_width">@dimen/tool_bar_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/button_default_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_invert</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/default_toolbar_text</item>
    </style>

    <style name="button_main" parent="button">
        <item name="android:background">@drawable/button_main_selector</item>
    </style>

    <style name="button_bar_main" parent="button">
        <item name="android:background">@drawable/button_bar_main_selector</item>
    </style>

    <style name="button_pro" parent="button">
        <item name="android:background">@drawable/button_pro_selector</item>
    </style>

    <style name="button_plain">
        <item name="android:paddingLeft">@dimen/tiny_margin</item>
        <item name="android:paddingRight">@dimen/tiny_margin</item>
        <item name="android:background">@drawable/button_transparent_selector</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textColor">@color/text_invert</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="default_text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="default_text_soft">
        <item name="android:textColor">@color/text_soft</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="default_text_highlight">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="intro_text">
        <item name="android:fontFamily">@string/roboto_light</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="intro_text_light" parent="intro_text">
        <item name="android:textColor">@color/text_invert_light</item>
    </style>

    <style name="intro_text_dark" parent="intro_text">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="intro_text_bright_light" parent="intro_text">
        <item name="android:textColor">@color/text_invert</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="slide_image">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/help_slide_image</item>
        <item name="android:layout_height">@dimen/help_slide_image</item>
        <item name="android:layout_marginTop">@dimen/tool_bar_height</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <style name="slide_text">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textColor">@color/text_invert</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">@dimen/tool_bar_height</item>
        <item name="android:layout_marginRight">@dimen/tool_bar_height</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="slide_text_title" parent="slide_text">
        <item name="android:textSize">@dimen/huge_text</item>
    </style>

    <style name="slide_text_body" parent="slide_text">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="new_account">
        <item name="android:fontFamily">@string/roboto_light</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/text_invert_light</item>
    </style>

    <style name="textbox">
        <item name="android:layout_marginBottom">@dimen/tiny_margin</item>
        <item name="android:layout_height">@dimen/tool_bar_height</item>
        <item name="android:drawablePadding">@dimen/tiny_margin</item>
    </style>

    <style name="textbox_dark" parent="textbox">
        <item name="android:textColor">@color/text_invert</item>
        <item name="android:background">@drawable/textbox_dark_selector</item>
        <item name="android:textColorHint">@color/text_invert_hint</item>
        <item name="android:textCursorDrawable">@drawable/cursor_light</item>
    </style>

    <style name="textbox_light" parent="textbox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/textbox_light_selector</item>
        <item name="android:textColorHint">@color/text_primary_hint</item>
        <item name="android:textCursorDrawable">@drawable/cursor_dark</item>
    </style>

    <style name="textbox_credentials_small_port" parent="textbox_dark">
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="button_credentials_small_port" parent="button_main">
        <item name="android:layout_marginLeft">@dimen/tool_bar_height</item>
        <item name="android:layout_marginRight">@dimen/tool_bar_height</item>
        <item name="android:layout_marginTop">@dimen/tiny_margin</item>
        <item name="android:layout_marginBottom">@dimen/tiny_margin</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="plain_button_credentials_small_port" parent="button_plain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_message_text">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>
